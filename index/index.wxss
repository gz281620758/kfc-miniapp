page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
}

.banner {
  width: 100%;
  height: 120px;
  background-color: #aaaaaa;
}

.banner2 {
  width: 100%;
  height: 80px;
  background-color: #fafafa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner2.overlay {
  display: none;
}

.banner2.fix {
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
}

.bottom-content {
  width: 100%;
  height: 100%;
}

.good-content {
  width: 100%;
  height: calc(100% - 80px);
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.good-content_left {
  width: 80px;
  border-right: 1px solid #eaeaea;
  box-sizing: border-box;
  background-color: #fefefe;
}

.good-content_left.fix {
  position: fixed;
  left: 0;
  bottom: 0;
}

.menu-item {
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #eaeaea;
  display: flex;
  align-items: center;
  justify-content: center;
}

.good-content_right {
  width: calc(100% - 80px);
  background-color: #fefefe;
}

.good-item {
  width: 100%;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #eaeaea;
}